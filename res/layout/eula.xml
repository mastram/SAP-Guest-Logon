<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	
	<TextView android:id="@+id/EULA"
          android:textSize="14px"
          android:text="Text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" >
    </TextView>
    
    <Button android:id="@+id/SAPEULA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Read Acceptable use policy for SAP Guest Network Access" >
    </Button>
    
	<TableLayout android:id="@+id/table"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		xmlns:android="http://schemas.android.com/apk/res/android" >

		<TableRow android:id="@+id/row_1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >

    		<Button android:id="@+id/Accept"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:drawableLeft="@drawable/accept"
        		android:text="  I Agree and Accept " >
    		</Button>
    		<Button android:id="@+id/Reject"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:drawableLeft="@drawable/reject"
        		android:text="  I Decline  " >
    		</Button>
        
        </TableRow>
    </TableLayout>
        
</LinearLayout>
</ScrollView>